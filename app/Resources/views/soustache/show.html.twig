{% extends 'base.html.twig' %}

{% block body %}
    <h1>Soustache</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sousTache.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sousTache.name }}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{% if sousTache.done %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('soustache_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('soustache_edit', { 'id': sousTache.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
